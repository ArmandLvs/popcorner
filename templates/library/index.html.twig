{% extends 'base.html.twig' %}

{% block title %}Bibliothèques{% endblock %}

{% block body %}
    <h1>Bibliothèques</h1>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th># </th>
                <th>Membre</th>
                <th>Description</th>
                <th>Nb de films</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for library in libraries %}
                <tr>
                    <th scope="row">{{ library.id }}</th>
                    <td>{{ library.member }}</td>
                    <td>{{ library.description }}</td>
                    <td>{{ library.movies|length }}</td>
                    <td><a class="btn btn-sm btn-primary" href="{{ path('library_show', {'id': library.id}) }}">Voir</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>



{% endblock %}
